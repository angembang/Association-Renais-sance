{% extends "layout.html.twig" %}

{% block main %}
<div class="main">
    <section class="update-password-form">
        <!-- Title -->
        <h2>Réinitialiser le mot de passe</h2>

        <!-- Alert message section -->
        <section class="alert-message">
            <!-- Error message placeholder -->
            <h3 id="error-message"></h3>
            <!-- Button to close the error message -->
            <button type="button" class="close-btn-error">Fermer</button>
        </section>

        <!-- Reset password form -->
        <form action="index.php?route=check-reset-password" method="POST" id="reset-password-form">
        
            <!-- CSRF token field -->
            <input type="hidden" name="csrf-token" id="csrf-token" value="{{ csrf_token }}">
          
            <fieldset>
                <!-- Email input field -->
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" placeholder="Entrez votre email" required>
            </fieldset>
          
            <fieldset>
                <!-- New password input field -->
                <label for="new-password">Nouveau mot de passe:</label>
               <input type="password" id="new-password" name="new-password" placeholder="Nouveau mot de passe" required>
            </fieldset>

            <fieldset>
                <!-- Confirm new password input field -->
                <label for="confirm-password">Confirmer le nouveau mot de passe:</label>
                <input type="password" id="confirm-password" name="confirm-password" placeholder="Confirmer le nouveau mot de passe" required>
            </fieldset>

            <!-- Submit button -->
            <button type="submit">Réinitialiser le mot de passe</button>
      
        </form>
    </section>
</div>
{% endblock %}