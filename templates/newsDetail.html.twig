{% extends "layout.html.twig" %}

{% block main %}
<div class="new-page-detail">
    <div class="footer header-news-page">
        <div class="i-foot">
            <a href="index.php?route=membership-register">Adhérer</a>
            <a href="index.php?route=donation">Faire un don</a>
            <a href="index.php?route=home">Accueil</a>
        </div>
    </div>
    <section class="news-section">
        {% if news %}
            <article class="news-item art">
                <h2>{{ news.title }}</h2>
                {% if news.image %}
                    <img src="{{ news.image }}" alt="{{ news.title }}">
                {% endif %}
                <p class="date">Publiée le {{ news.publicationDate|date("d/m/Y") }}</p>
                <p class="P-excerpt">{{ news.excerpt }}</p>
                <div>{{ news.content | raw }}</div>
                {% if news.video %}
                    <div class="youtube-video">
                        <iframe width="350" height="250" src="{{ news.video }}" frameborder="0" allowfullscreen></iframe>
                    </div>
                {% endif %}
            </article>
        {% else %}
            <p>Aucune actualité trouvée.</p>
        {% endif %}
    </section>
</div>
{% endblock %}